<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Vimeo"
    sling:resourceType="granite/ui/components/coral/foundation/container"
    granite:class="cmp-embeddable-vimeo__editor">
    <items jcr:primaryType="nt:unstructured">
        <videoId
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            fieldDescription="ID of the Vimeo video to embed."
            fieldLabel="Video ID"
            name="./vimeoVideoId"
            required="{Boolean}true"/>
        <accessibilityLabel
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            fieldDescription="Value of an aria-label attribute for the iframe."
            fieldLabel="Accessibility Label"
            name="./vimeoAccessibilityLabel"
            value=""/>
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
            deleteHint="{Boolean}true"
            fieldLabel="Layout"
            name="./vimeoLayout"
            vertical="{Boolean}false">
            <granite:data
                jcr:primaryType="nt:unstructured"
                cmp-vimeo-dialog-edit="radioGroup"/>
            <items jcr:primaryType="nt:unstructured">
                <fixed
                    jcr:primaryType="nt:unstructured"
                    checked="{Boolean}true"
                    text="Fixed"
                    value="fixed"/>
                <responsive
                    jcr:primaryType="nt:unstructured"
                    text="Responsive"
                    value="responsive"/>
            </items>
        </layout>
        <fixed
            granite:class="foundation-toggleable"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <width
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                    fieldDescription="Width of the Vimeo video player."
                    fieldLabel="Width"
                    name="./vimeoWidth"/>
                <height
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                    fieldDescription="Height of the Vimeo video player."
                    fieldLabel="Height"
                    name="./vimeoHeight"/>
            </items>
            <granite:data
                jcr:primaryType="nt:unstructured"
                cmp-vimeo-dialog-layout-option="fixed"/>
        </fixed>
        <responsive
            granite:class="foundation-toggleable"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <aspectRatio
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                    fieldDescription="Percentage aspect ratio of the Vimeo video player (height / width * 100%)."
                    fieldLabel="Percentage Aspect ratio"
                    name="./vimeoAspectRatio"
                    step="0.0001"/>
            </items>
            <granite:data
                jcr:primaryType="nt:unstructured"
                cmp-vimeo-dialog-layout-option="responsive"/>
        </responsive>
        <parameters
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container"
            fieldDescription="Parameters of the Vimeo video player."
            fieldLabel="Parameters">
            <items jcr:primaryType="nt:unstructured">
                <mute
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    text="Enable Mute"
                    checked="${cqDesign.vimeoMuteDefaultValue == 'true'}"
                    uncheckedValue="false"
                    value="true"
                    fieldDescription="This parameter specifies whether the video will play muted by default. Enabling this increases the chance that Autoplay works in modern browsers."
                    name="./vimeoMute">
                    <granite:rendercondition
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/renderconditions/simple"
                        expression="${cqDesign.vimeoMuteEnabled == 'true'}"/>
                </mute>
                <autoplay
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    text="Enable Autoplay"
                    checked="${cqDesign.vimeoAutoPlayDefaultValue == 'true'}"
                    uncheckedValue="false"
                    value="true"
                    fieldDescription="This parameter specifies whether the initial video will automatically start to play when the player loads. This is only effective on Publish or when using &quot;View as Published&quot;."
                    name="./vimeoAutoPlay">
                    <granite:rendercondition
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/renderconditions/simple"
                        expression="${cqDesign.vimeoAutoPlayEnabled == 'true'}"/>
                </autoplay>
                <loop
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    text="Enable Loop"
                    checked="${cqDesign.vimeoLoopDefaultValue == 'true'}"
                    uncheckedValue="false"
                    value="true"
                    fieldDescription="In the case of a single video specifies whether the player should play the initial video again and again. In the case of a playlist, the player plays the entire playlist and then starts again at the first video."
                    name="./vimeoLoop">
                    <granite:rendercondition
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/renderconditions/simple"
                        expression="${cqDesign.vimeoLoopEnabled == 'true'}"/>
                </loop>
                <inline
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    text="Enable Inline Playback (iOS)"
                    checked="${cqDesign.vimeoPlaysInlineDefaultValue == 'true'}"
                    uncheckedValue="false"
                    value="true"
                    fieldDescription="This parameter controls whether videos play inline (on) or fullscreen (off) in an HTML5 player on iOS."
                    name="./vimeoPlaysInline">
                    <granite:rendercondition
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/renderconditions/simple"
                        expression="${cqDesign.vimeoPlaysInlineEnabled == 'true'}"/>
                </inline>
            </items>
        </parameters>
    </items>
    <granite:data
        jcr:primaryType="nt:unstructured"
        cmp-embed-dialog-edit-embeddableoptions="true"
        cmp-embed-dialog-edit-showhidetargetvalue="shrss/components/video/embeddable/vimeo"/>
</jcr:root>
