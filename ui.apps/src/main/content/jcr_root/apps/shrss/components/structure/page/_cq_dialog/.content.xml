<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,core.wcm.components.page.v3.editor,cq.wcm.msm.properties,granite.contexthub.configuration,cq.siteadmin.admin.properties,core.wcm.components.image.v3.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_page_v3"
    mode="edit"
    trackingFeature="core-components:page:v3">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                granite:class="cq-siteadmin-admin-properties-tabs"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                    <shrss
                        jcr:primaryType="nt:unstructured"
                        jcr:title="SHRSS - Themes"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <shrssTheme
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Theme Styles"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <mainClientLibs
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select the Main theme which you want your pages to inherit."
                                                fieldLabel="Main theme"
                                                name="./mainClientLib">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <hardrock
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Hard Rock"
                                                        value="hardrock.site"/>
                                                    <unity
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Unity"
                                                        value="unity.site"/>
                                                </items>
                                            </mainClientLibs>
                                            <subClientLibs
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select the Sub theme which you want your pages to inherit."
                                                fieldLabel="Sub theme"
                                                name="./subClientLib">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="None"
                                                        value="page-none"/>
                                                    <pageHotel
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Hotel"
                                                        value="page-hotel"/>
                                                    <pageCafe
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Cafe"
                                                        value="page-cafe"/>
                                                    <pageEntertainment
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Entertainment"
                                                        value="page-entertainment"/>
                                                    <pageReverb
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Reverb"
                                                        value="page-reverb"/>
                                                </items>
                                            </subClientLibs>
                                        </items>
                                    </shrssTheme>
                                    <header-footer
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Header and Footer Experience Fragments"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <headerfragment
                                                cq:showOnCreate="{Boolean}true"
                                                granite:id="xfPicker"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/experience-fragments/editor/components/xffield"
                                                fieldDescription="Choose the header experience fragment variation to display."
                                                fieldLabel="Header experience fragment path"
                                                filter="folderOrVariant"
                                                name="./hfragmentVariationPath"
                                                propertyFilter="cq:xfShowInEditor"/>
                                            <footerfragment
                                                cq:showOnCreate="{Boolean}true"
                                                granite:id="xfPicker"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/experience-fragments/editor/components/xffield"
                                                fieldDescription="Choose the footer experience fragment variation to display."
                                                fieldLabel="Footer experience fragment path"
                                                filter="folderOrVariant"
                                                name="./ffragmentVariationPath"
                                                propertyFilter="cq:xfShowInEditor"/>
                                        </items>
                                    </header-footer>
                                </items>
                            </column>
                        </items>
                    </shrss>
                    <customcommon
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Custom Common"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                	<hidebreadcrumb
                                		cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Select checkbox to hide breadcrumb"
                                        name="./hideBreadcrumb"
                                        text="Hide Breadcrumb"
                                        uncheckedValue="false"
                                        value="true"/>
                                    <ldjson
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldDescription="Enter ld+json"
                                        fieldLabel="Ld+Json"
                                        name="./ldJson"
                                        resize="both"
                                        rows="{Long}10"/>
                                </items>
                            </column>
                        </items>
                    </customcommon>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
